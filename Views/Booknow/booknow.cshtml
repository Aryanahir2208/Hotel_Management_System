@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<partial name="/Views/Booknow/_bookdetails.cshtml" />
<!-- Booking Start -->

<br />

<div class="container g-3">
    <h3 class="fnt">Guest Details</h3><br />
    <div class="row">
        <div class="col-md-6 line1 p-4">
            <form>
                <div class="form-row row">
                    <div class="form-group col-md-2">
                        <label for="form">Prefix</label>
                        <select id="prefix" name="cars" class="form-control">
                            <option value="Select.">Prefix</option>
                            <option value="Mr.">Mr.</option>
                            <option value="Miss">Miss</option>
                            <option value="Ms.">Ms.</option>
                            <option value="Mrs.">Mrs.</option>
                        </select>
                    </div>
                    <div class="form-group col-md-5">
                        <label for="fname">First Name</label>
                        <input type="fname" class="form-control" id="fname" placeholder="First Name">
                    </div>
                    <div class="form-group col-md-5">
                        <label for="lname">Last Name</label>
                        <input type="lname" class="form-control" id="lname" placeholder="Last Name">
                    </div>
                </div><br />

                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="mobile">Mobile Number</label>
                        <input type="mobile" class="form-control" id="mobile" placeholder="Mobile Number">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="email">E-mail</label>
                        <input type="email" class="form-control" id="email" placeholder="E-Mail">
                    </div>
                </div><br />
                <div class="form-row row">
                    <div class="form-group col-md-4">
                        <label for="inputCity">Country</label>
                        <select id="inputState" class="form-control">
                            <option selected>Choose Country</option>
                            <option value="Mr.">Mr.</option>
                            <option value="Miss">Miss</option>
                            <option value="Ms.">Ms.</option>
                            <option value="Mrs.">Mrs.</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">State</label>
                        <select id="inputState" class="form-control">
                            <option selected>Choose State</option>
                            <option value="Mr.">Mr.</option>
                            <option value="Miss">Miss</option>
                            <option value="Ms.">Ms.</option>
                            <option value="Mrs.">Mrs.</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputZip">Zip/PinCode</label>
                        <input type="text" class="form-control" id="inputZip"><br />
                    </div>
                    <div class="form-group col-md-12">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address"
                               placeholder="Apartment, studio, or floor">
                    </div>


                </div> <br />

                <button type="submit" class="btn btn-primary">Book Now</button>
            </form>
        </div>
        <div class="col-md-1">
        </div>
        foreach
        <div class="col-md-4 line1 p-3" style="border: 1px solid #d7d7d7; background: #fcf0e5; border-radius: 0px; z-index: 1;">
            <h5 class="fnt">Your Stay</h5><br />
            <div class="row ">
                <div class="col-md-6">
                    <b>Check-in </b><br />After 12:00 PM
                </div>
                <div class="col-md-6">
                    <b>Check-out</b> <br />Before 10:00 AM
                </div>
            </div>
            <hr />

            <div class="row">
                <div class="col-md-12">
                    <b>Sat, Mar 4, 2023 - Sun, Mar 5, 2023</b>
                </div>
                <div class="col-md-12">
                    <i>2 Adults</i>
                </div>
            </div> <br />

            <div class="row">
                <div class="col-md-6">
                    Room Name
                </div>
                <div class="col-md-6">
                    Room Price
                </div>
            </div>
            <br />
           
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <h5>Total:</h5>
                </div>
                <div class="col-md-6">
                    <h5>Price</h5>
                    <span>(INR Tax Included)</span>
                </div>
            </div>

        </div>
    </div>
   
</div>
<br />
<br />
<br />

<!-- Booking End -->
