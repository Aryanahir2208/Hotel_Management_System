@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

@using System.Data;
@model DataTable



</span>
<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                </br>
                <div class="card">
                    <div class="card-header">
                        <h3>FeedBack List</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="table-1">
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            Sr.
                                        </th>
                                        <th class="text-center">Contact Name</th>
                                        <th class="text-center">Email</th>
                                        <th class="text-center">Subject</th>
                                        <th class="text-center">Message</th>
                                        <th class="text-center">Created</th>
                                        <th class="text-center">Modified</th>
                                        <th class="text-center">Delete</th>
                                    </tr>
                                </thead>
                                <tbody id="myTable">

                                    @{
                                        int i = 1;
                                    }
                                    @foreach (DataRow dr in Model.Rows)
                                    {
                                        <tr>
                                            <td class="text-center">@i</td>
                                            <td class="text-center">@dr["ContactName"]</td>
                                            <td class="text-center">@dr["Email"]</td>
                                            <td class="text-center">@dr["Subject"]</td>
                                            <td class="text-center">@dr["Message"]</td>
                                            <td class="text-center">@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yyyy")</td>
                                            <td class="text-center">@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yyyy")</td>

                                            <td class="text-center">
                                                <form method="post" asp-area="CON_Contact" asp-controller="CON_Contact" asp-action="Delete">
                                                    <input type="hidden" name="ContactID" value="@Convert.ToInt32(dr["ContactID"])" />
                                                    <button type="submit" class="btn btn-danger " onclick="return confirm('Are you sure you want to delete : @dr["ContactName"]')">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

