@{
    ViewData["Title"] = "RoomCategory Add/Edit";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}


@model Hotel_Management_System.Areas.HMS_RoomCategory.Models.HMS_RoomCategoryModel

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 ">
                <div class="card">
                    <div class="card-header">
                        <h4>Room Add/Edit</h4>
                    </div>
                    <form role="form" class="form-horizontal" asp-area="HMS_RoomCategory" asp-controller="HMS_RoomCategory" asp-action="Save" enctype="multipart/form-data">
                        @Html.HiddenFor(x=>x.RoomCategoryID)
                        <div class="card-body">
                            <div class="form-group">
                                <label>Category Name</label>
                                <input type="text" class="form-control" asp-for="CategoryName" placeholder="Enter Category Name">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" class="form-control" asp-for="Description" placeholder="Enter Category Description">
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-2 col-md-10 ">
                                        <input type="submit" class="btn btn-success" />
                                        <a class="btn btn-danger" asp-action="Index">Cancel</a>
                                        <br />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

